<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout


            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rec"
                android:layout_height="wrap_content">


            <ImageView
                    android:id="@+id/image_poster"
                    android:scaleType="centerCrop"
                    android:src="@drawable/post"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            <LinearLayout
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/video_bottom_gradient"
                    android:layout_alignBottom="@+id/image_poster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView android:layout_width="0dp"
                          android:text="03:53"
                          android:layout_weight="1"
                          android:paddingRight="8dp"
                          android:textColor="@color/colorPrimary"
                          android:gravity="left"
                          android:layout_height="wrap_content" android:id="@+id/tvViews"/>

                <TextView android:layout_width="0dp"
                          android:text="11.8M"
                          android:layout_weight="1"
                          android:gravity="right"
                          android:paddingLeft="8dp"
                          android:textColor="@color/colorPrimary"
                          android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>


        <TextView
                android:layout_width="match_parent"
                android:text="Movie"
                android:maxLines="2"
                android:minLines="2"
                android:textSize="12dp"
                android:ellipsize="end"
                android:layout_height="wrap_content" android:id="@+id/title"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>